<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder
			by default - http://logback.qos.ch/manual/layouts.html -->
		<encoder>
			<pattern>%relative [%thread] %-5level %logger{36} - \(%file:%line\) %msg%n</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>